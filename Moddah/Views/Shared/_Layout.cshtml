<!DOCTYPE html>
<html class="container">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <img style="margin-top:0;" width="100%" height="350px" src="~/LOGOS/pics.png" alt="Alternate Text" />
    @Html.Partial("_welcome")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="background-color:#e37f1d;height:30px">
            <h5>&copy; @DateTime.Now.Year - Muddah Housing System</h5>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
